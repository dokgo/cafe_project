<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="0dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cafe_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/cafe_image_description"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/cafe_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:background="@color/colorGray"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size"
            tools:text="Name" />

        <TextView
            android:id="@+id/cafe_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textSize="@dimen/cafe_address_text_size"
            tools:text="Address"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cafe_rank_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textSize="@dimen/cafe_address_text_size"
            tools:text="Rank"
            android:layout_below="@+id/cafe_address_text"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/card_view_title_padding"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
