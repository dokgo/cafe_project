<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/card_dish_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size"
            tools:text="Name" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/box1"
            android:layout_below="@+id/card_dish_name_title">

            <TextView
                android:id="@+id/card_dish_time"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/card_view_title_padding"
                android:paddingEnd="@dimen/card_view_title_padding"
                android:paddingStart="@dimen/card_view_title_padding"
                android:textColor="#000000"
                android:textSize="@dimen/cafe_address_text_size"
                tools:text="Time"
                android:layout_below="@+id/card_dish_type"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/card_dish_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingEnd="@dimen/card_view_title_padding"
                android:paddingStart="@dimen/card_view_title_padding"
                android:textColor="#000000"
                android:textSize="@dimen/cafe_address_text_size"
                tools:text="Type"
                android:layout_below="@+id/card_dish_name_title"
                android:layout_alignParentStart="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box1"
            android:id="@+id/box2">

            <TextView
                android:id="@+id/card_dish_cost"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/card_view_title_padding"
                android:paddingEnd="@dimen/card_view_title_padding"
                android:paddingStart="@dimen/card_view_title_padding"
                android:textColor="#000000"
                android:textSize="@dimen/cafe_address_text_size"
                tools:text="Cost"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/box1"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/card_dish_portion"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/card_view_title_padding"
                android:paddingStart="@dimen/card_view_title_padding"
                android:textColor="#000000"
                android:textSize="@dimen/cafe_address_text_size"
                tools:text="Portion"
                android:layout_below="@+id/card_dish_cost"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>