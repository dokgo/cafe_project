<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/cafe_image"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cafe_image_description"
            android:scaleType="fitStart" />


        <TextView
            android:id="@+id/cafe_address_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="205dp"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textColor="#000000"
            android:textSize="@dimen/cafe_address_text_size"
            android:visibility="invisible"
            tools:text="Address" />

        <TextView
            android:id="@+id/cafe_rank_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/cafe_name_text"
            android:layout_toEndOf="@+id/cafe_image"
            android:paddingBottom="@dimen/card_view_title_padding"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:textSize="@dimen/cafe_address_text_size"
            android:visibility="invisible"
            tools:text="Rank" />

        <TextView
            android:id="@+id/cafe_name_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGray"
            android:paddingEnd="@dimen/card_view_title_padding"
            android:paddingStart="@dimen/card_view_title_padding"
            android:scaleType="fitStart"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size"
            tools:text="Name" />

    </RelativeLayout>

</android.support.v7.widget.CardView>