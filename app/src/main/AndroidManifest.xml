<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.study.dokgo.projectcafe">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".view.CafeDescriptionActivity" />
        <activity android:name=".view.EditCafeInfoActivity" />
        <activity android:name=".view.AddCafeActivity" />
        <activity android:name=".view.AddDishActivity" />
        <activity android:name=".view.DishesActivity" />
        <activity android:name=".view.EditDishActivity" />
        <activity android:name=".view.EditDrinkActivity" />
        <activity android:name=".view.DrinksActivity" />
        <activity android:name=".view.AddCafeActivity$AddDrinkActivity" />
        <activity android:name=".view.AddDrinkActivity" />
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.TobaccosActivity" />
        <activity android:name=".view.AddTobaccoActivity" />
        <activity android:name=".view.EditTobaccoActivity"></activity>
    </application>

</manifest>